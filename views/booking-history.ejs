<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Booking History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #007BFF;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background: white;
            border-radius: 5px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #007BFF;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #218838;
        }
        a {
            display: block;
            text-align: center;
            margin: 20px auto;
            color: #007BFF;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        a:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Booking History</h1>
    <table>
        <tr>
            <th>S.N.</th>
            <th>Associate Name</th>
            <th>Customer Name</th>
            <th>Customer ID</th>
            <th>Deposit Date</th>
            <th>Deposit Amount</th>
            <th>Maturity Amount</th>
            <th>UTR/IMPS Number</th>
            <th>Action</th>
        </tr>
        <% bookings.forEach((booking) => { %>
            <tr>
                <td><%= booking["S.N."] %></td>
                <td><%= booking["ASSOCIATE NAME"] %></td>
                <td><%= booking["CUSTOMER NAME"] %></td>
                <td><%= booking["CUSTOMER ID"] %></td>
                <td><%= booking["DEPOSIT DATE"] %></td>
                <td><%= booking["DEPOSIT AMOUNT"] %></td>
                <td><%= booking["MATURITY AMOUNT"] %></td>
                <td><%= booking["UTR/IMPS NUMBER"] %></td>
                <td>
                    <form action="/claim-now" method="POST">
                        <input type="hidden" name="id" value="<%= booking["CUSTOMER ID"] %>">
                        <button type="submit">Claim Now</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
    <a href="/">Go to Home</a>
</body>
</html>